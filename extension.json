{
  "title": "Neon",
  "description": "Scrobble your Google Play Music and Spotify listening activity to Last.fm, Libre.fm and ListenBrainz",

  "permissions": [
    "declarativeContent",
    "storage",
    "unlimitedStorage"
  ],

  "background": {
    "scripts": [
      "Common.js",
      "Background/Common.js",
      "Background/Messaging.js",

      "Background/Services/Callback.js",
      "Background/Services/ContentScript.js",
      "Background/Services/Library.js",
      "Background/Services/Scrobble.js",

      "Background/Services/App.js",
      "Background/Services/Migrate.js"
    ]
  },
  "options_ui": {
    "page": "Application.html#/configuration",
    "open_in_tab": true
  },

  "features": {
    "contentScripts": "dynamic",
    "permissions": "dynamic"
  },
  "modules": {
    "destinations": [
      "neon-extension-destination-lastfm",
      "neon-extension-destination-librefm",
      "neon-extension-destination-listenbrainz",
      "neon-extension-destination-trakt"
    ],
    "sources": [
      "neon-extension-source-amazonvideo",
      "neon-extension-source-googlemusic",
      "neon-extension-source-netflix",
      "neon-extension-source-spotify"
    ]
  }
}
